<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10sp"
    android:id="@+id/container_card_vehiculo_seguro"
    android:backgroundTint="@color/color_item"
    app:cardCornerRadius="20sp"
    app:cardElevation="10sp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/img_type_vehicle_seguro"
            android:layout_width="60sp"
            android:layout_height="60sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textNombreVehiculoSeguroItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre Coche"
                android:textColor="@color/black"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/textNpolizaItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/lbl_num_poliza"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:layout_marginTop="15sp"/>

        </LinearLayout>
    </LinearLayout>

   <FrameLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_margin="8dp">

       <ImageButton
           android:id="@+id/btnDeleteVehiculoSeguroItem"
           android:layout_width="24sp"
           android:layout_height="24sp"
           android:layout_gravity="end"
           android:elevation="50sp"
           android:background="@drawable/ic_delete_item"/>

   </FrameLayout>
</androidx.cardview.widget.CardView>