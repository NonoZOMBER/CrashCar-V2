<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_dialog">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="15sp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Selecciona una opciÃ³n"
                android:textSize="25sp"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/btnMyData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:background="@drawable/shape_btn_login_google"
                android:padding="5sp"
                android:textAlignment="center"
                android:layout_marginTop="15sp"
                android:elevation="10sp"
                android:text="Usar mis datos registrados"/>

            <TextView
                android:id="@+id/btnOtherData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:background="@drawable/shape_btn_login_google"
                android:padding="5sp"
                android:elevation="10sp"
                android:layout_marginTop="15sp"
                android:textAlignment="center"
                android:text="Usar otros datos"/>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>