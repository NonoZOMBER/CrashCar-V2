<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10sp"
    android:id="@+id/container_card_parte"
    app:cardCornerRadius="10sp"
    app:cardBackgroundColor="@color/color_item"
    android:layout_height="wrap_content"
    app:cardElevation="5sp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10sp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textNumParteItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lblNumeroParte"
            android:textColor="@color/black"
            android:textSize="20sp"/>


        <TextView
            android:id="@+id/textFechaParteItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lblFechaParte"
            android:textColor="@color/black"
            android:textSize="20sp"/>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/btnRemoveItemParte"
            android:layout_width="24sp"
            android:layout_height="24sp"
            android:layout_gravity="end"
            android:layout_margin="10sp"
            android:elevation="10sp"
            android:background="@drawable/ic_delete_item"/>

    </FrameLayout>

</androidx.cardview.widget.CardView>