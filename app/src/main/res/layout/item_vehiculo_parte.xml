<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10sp"
    android:backgroundTint="@color/color_item"
    app:cardCornerRadius="20sp"
    app:cardElevation="10sp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/img_type_vehicle_parte"
            android:layout_width="60sp"
            android:layout_height="60sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textNombreVehiculoParteItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre Coche"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textMatriculaItemParte"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/lbl_aseguradora"
                android:textColor="@color/black"
                android:textSize="17sp" />

            <TextView
            android:id="@+id/textNpolizaItemParte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lbl_aseguradora"
            android:textColor="@color/black"
            android:textSize="17sp" />

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>